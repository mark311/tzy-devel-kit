[core]
editor = emacs -q
excludesfile = ~/.gitignore_global

[alias]
st = status
br = branch
ci = commit
co = checkout
untracked = ls-files --others --exclude-standard

logx = log --graph --format=format:'%C(bold blue)%h%C(reset) -%C(bold yellow)%d%C(reset) %C(white)%s%C(reset)' -n 15
logxd = log --graph --format=format:'%C(bold blue)%h%C(reset) -%C(bold yellow)%d%C(reset) %C(white)%s%C(reset) - %C(green)%an at %ar%C(reset)' -n 15

[merge]
# to show ancestor (the original version) when resolve conflicts
conflictstyle = diff3